<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="custom-titled-pane" styleClass="root" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tableapp.ThicknessTableController">
	<children>
		<Label id="custom-titled-pane-label" alignment="TOP_LEFT" layoutX="20.0" text="Pile Thickness Table" />

		<AnchorPane maxHeight="300.0" maxWidth="500.0" minHeight="270.0" minWidth="280.0" prefHeight="270.0" prefWidth="280.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="20.0">
			<VBox alignment="TOP_RIGHT" prefHeight="265.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="0.0">
				<children>
					<HBox alignment="CENTER_RIGHT" prefHeight="45.0">
						<children>

							<Button fx:id="addRow" onAction="#addRowBelow" text="Add row" textAlignment="CENTER">
                        <HBox.margin>
                           <Insets right="5.0" />
                        </HBox.margin></Button>
							<Button fx:id="delRow" onAction="#delLastRow" text="Del row" textAlignment="CENTER">
							</Button>
						</children>
					</HBox>

					<TableView fx:id="table" prefHeight="200.0" prefWidth="270">
						<columns>

							<TableColumn fx:id="indexColumn" prefWidth="50.0" text="Index">
								<cellValueFactory>
									<PropertyValueFactory property="index" />
								</cellValueFactory>
							</TableColumn>

							<TableColumn fx:id="thvColumn" prefWidth="100.0">
								<cellValueFactory>
									<PropertyValueFactory property="thv" />
								</cellValueFactory>
							</TableColumn>
							<TableColumn prefWidth="100.0" fx:id="xthColumn">
								<cellValueFactory>
									<PropertyValueFactory property="xth" />
								</cellValueFactory>
							</TableColumn>

						</columns>
					</TableView>



				</children>
			</VBox>


		</AnchorPane>
	</children>
	<HBox.margin>
		<Insets left="10.0" right="10.0" top="10.0" />
	</HBox.margin>

</AnchorPane>
